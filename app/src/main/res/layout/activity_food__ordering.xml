<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Food_Ordering">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/user_TV"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Daily Homemade Meal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />
    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:id="@+id/line_user"
        android:layout_below="@id/user_TV"
        android:layout_centerInParent="true"
        android:background="#D5D4D4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/category"
        android:text="Categories"
        android:layout_below="@id/line_user"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="2dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:id="@+id/C1"
        android:elevation="30dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/line_user">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Daily Pasta"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:background="@drawable/pasta"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:id="@+id/C2"
        android:layout_height="150dp"
        android:elevation="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/line_user"
        android:layout_toRightOf="@id/C1"
        android:layout_marginLeft="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Fresh Cookies"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:background="@drawable/cookies"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:id="@+id/C3"
        android:elevation="30dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/C1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Daily salad"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:background="@drawable/salad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:id="@+id/C4"
        android:layout_height="150dp"
        android:elevation="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/C2"
        android:layout_toRightOf="@id/C3"
        android:layout_marginLeft="30dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Fresh Juices"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:background="@drawable/juices"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/C5"
            android:layout_height="150dp"
            android:elevation="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/C4"
            android:layout_toRightOf="@id/C3"
            android:layout_marginLeft="30dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Homemade pizza"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="95dp"
                    android:layout_height="85dp"
                    android:background="@drawable/pizza"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/C6"
            android:elevation="30dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/C3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="French Macrons"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="95dp"
                    android:layout_height="85dp"
                    android:background="@drawable/macrons"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/C7"
            android:layout_height="150dp"
            android:elevation="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/C6"
            android:layout_toRightOf="@id/C6"
            android:layout_marginLeft="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Homemade burger"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="95dp"
                    android:layout_height="85dp"
                    android:background="@drawable/burger"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/C8"
            android:elevation="30dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/C5"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Fresh Sandwich"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="95dp"
                    android:layout_height="85dp"
                    android:background="@drawable/sandwhich"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>