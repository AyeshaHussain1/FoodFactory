<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fragment.Dashboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:padding="30dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/IV_Main"
        android:elevation="25dp"
        />
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:id="@+id/line_user"
        android:layout_marginTop="10dp"
        android:layout_below="@id/IV_Main"
        android:layout_centerInParent="true"
        android:background="#EFECEC"/>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:id="@+id/C1"
        android:elevation="30dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"
        android:layout_below="@id/line_user"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Recipies"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:src="@drawable/ic_restaurant"
                android:background="@drawable/card_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:id="@+id/C2"
        android:layout_height="130dp"
        android:elevation="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/line_user"
        android:layout_toRightOf="@id/C1"
        android:layout_marginLeft="20dp"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Order Food"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:src="@drawable/orders"
                android:background="@drawable/card_view1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:id="@+id/C3"
        android:elevation="30dp"
        android:layout_height="130dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/C1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Account Details"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:src="@drawable/account"
                android:background="@drawable/card_view2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:id="@+id/C4"
        android:layout_height="130dp"
        android:elevation="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/C2"
        android:layout_toRightOf="@id/C3"
        android:layout_marginLeft="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Reviews"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:src="@drawable/star"
                android:background="@drawable/card_view4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>